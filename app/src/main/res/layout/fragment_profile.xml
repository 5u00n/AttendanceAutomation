<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.Week.WeeklyReportFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="100dp"
            android:background="#3768ACFF"
            android:weightSum="8">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:cardCornerRadius="70dp">

                <ImageView
                    android:src="@drawable/ic_launcher_foreground"
                    android:id="@+id/fragment_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:textSize="23sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_username"
                    android:text="Username"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_address"
                    android:text="abc, xyz, 0000"/>
            </LinearLayout>

            <Button
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_report"
                android:text="Log Report"/>

        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotation="-90"
                android:text="INFO" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Hi! My name is John, Iâ€™m a creative geek from San Francisco, CA. Contact me at \njohn@mail.com" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="26sp"
                    android:id="@+id/profile_absent_stats"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absents"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="26sp"
                    android:id="@+id/profile_present_stats"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="26sp"
                    android:id="@+id/profile_total_stats"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"/>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:background="#3768ACFF"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:rotation="270"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp"
                android:text="REQUESTS" />

            <ListView
                android:paddingVertical="20dp"
                android:id="@+id/profile_list_reports"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                />
        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/profile_button_manual_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Attendance" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>