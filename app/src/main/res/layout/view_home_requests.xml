<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center|left"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    android:orientation="horizontal">

    <TextView
        android:textSize="21sp"
        android:visibility="gone"
        android:id="@+id/view_fragment_home_request_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1." />

    <TextView
        android:textSize="21sp"
        android:id="@+id/view_fragment_home_request_text_sr_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="1." />
    <View
        android:layout_width="1.5dp"
        android:layout_height="30dp"
          android:background="@drawable/bg_fill_color"
        />

    <TextView
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:id="@+id/view_fragment_home_request_text_status"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Approved" />
    <View
        android:layout_width="1.3dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_fill_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:text="Reason....">

        <TextView
            android:id="@+id/view_fragment_home_request_text_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason...."
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:textSize="11dp"
            android:id="@+id/view_fragment_home_request_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from dd/mm/yy" />
    </LinearLayout>


</LinearLayout>